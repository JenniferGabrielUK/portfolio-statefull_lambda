// portfolio-stateful-lambda.cpp : This file contains the 'main' function. Program execution begins and ends there.
#include <iostream>
#include <vector>
#include <algorithm>
#include <string>

int global_x(1000);
std::string global_y{ "Jenny" };

void test1() {
    std::cout << "\nTest1===================" << std::endl;
    int local_x{ 100 };
    auto l = [local_x]() {
        std::cout << local_x << std::endl;
        std::cout << global_x << std::endl;
    };
    l();
    std::string local_y {"x"};
    auto l1 = [local_y]() {
        std::cout << local_y << std::endl;
        std::cout << global_y << std::endl;
    };
    l1();
}

void test2() {
    std::cout << "\nTest2====================" << std::endl;
    int x{ 100 };
    auto l = [x]() mutable {
        x += 100;
        std::cout << x << std::endl;
    };
    l();
    std::cout << x << std::endl;
    l();
    std::cout << x << std::endl;
    l();
    std::cout << x << std::endl;
    l();
    std::cout << x << std::endl;
    l();
    std::cout << x << std::endl;
}

int main()
{
    test1();
    test2();

    return 0;
}

